<virtualizer>
    <id>UUID-ETH-001-req1</id>
    <name>ETH OpenStack-OpenDaylight domain with request</name>
    <nodes>
        <node>
            <id>UUID-01</id>
            <name>single Bis-Bis node representing the whole OS domain</name>
            <type>BisBis</type>
            <ports>
                <port>
                    <id>0</id>
                    <name>OVS-north external port</name>
                    <port_type>port-sap</port_type>
                    <sap>SAP24</sap>
                    <capability/>
                </port>
            </ports>
            <resources>
                <cpu>10</cpu>
                <mem>32</mem>
                <storage>5</storage>
            </resources>
            <NF_instances>
                <node>
                    <id>NF1</id>
                    <name>Web server NF</name>
                    <type>webserver</type>
                    <ports>
                        <port>
                            <id>NF1_in</id>
                            <name>in</name>
                            <port_type>port-abstract</port_type>
                            <capability>...</capability>
                        </port>
                    </ports>
                </node>
            </NF_instances>
            <flowtable>
                <flowentry>
                    <id>f1</id>
                    <port>../../../ports/port[id=0]</port>
                    <match>dl_vlan=1</match>
                    <out>../../../NF_instances/node[id=NF1]/ports/port[id=NF1_in]</out>
                    <action>strip_vlan</action>
                </flowentry>
                <flowentry>
                    <id>f2</id>
                    <port>../../../NF_instances/node[id=NF1]/ports/port[id=NF1_in]</port>
                    <match/>
                    <out>../../../ports/port[id=0]</out>
                    <action>mod_vlan_vid:2</action>
                </flowentry>
            </flowtable>
        </node>
    </nodes>
</virtualizer>
