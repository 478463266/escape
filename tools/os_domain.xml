<virtualizer>
    <id>OS-UUID-ETH-001</id>
    <name>ETH OpenStack-OpenDaylight Domain</name>
    <nodes>
        <node>
            <id>UUID-01</id>
            <name>Single BiSBiS in OS Domain</name>
            <type>BisBis</type>
            <ports>
                <port>
                    <id>0</id>
                    <name>Inter-Domain port - OVS-north external</name>
                    <port_type>port-sap</port_type>
                    <sap>SAP24</sap>
                    <capability/>
                </port>
            </ports>
            <resources>
                <cpu>10 VCPU</cpu>
                <mem>32 GB</mem>
                <storage>5 TB</storage>
            </resources>
            <capabilities>
                <supported_NFs>
                    <node>
                        <id>OS-NF1</id>
                        <name>Web server NF</name>
                        <type>webserver</type>
                        <ports>
                            <port>
                                <id>NF1_in</id>
                                <name>in</name>
                                <port_type>port-abstract</port_type>
                            </port>
                        </ports>
                    </node>
                    <node>
                        <id>OS-NF2</id>
                        <name>Echo NF</name>
                        <type>echo</type>
                        <ports>
                            <port>
                                <id>NF2_in</id>
                                <name>in</name>
                                <port_type>port-abstract</port_type>
                            </port>
                        </ports>
                    </node>
                </supported_NFs>
            </capabilities>
        </node>
    </nodes>
</virtualizer>