<?xml version="1.0" ?>
<virtualizer>
    <id>UUID-ETH-001-pack</id>
    <name>ETH OpenStack domain-packaged</name>
    <nodes>
        <node>
            <id>UUID-OpenStack-01-pack</id>
            <name>single Bis-Bis node representing the whole OpenStack
                domain-packaged
            </name>
            <type>BisBis</type>
            <ports>
                <port>
                    <id>0</id>
                    <name>SAP24</name>
                    <port_type>port-sap</port_type>
                    <sap>SAP24</sap>
                </port>
            </ports>
            <resources>
                <cpu>20</cpu>
                <mem>51200</mem>
                <storage>1024</storage>
            </resources>
            <links>
                <link>
                    <id>resource-link</id>
                    <src>../../../ports/port[id=0]</src>
                    <dst>../../../ports/port[id=0]</dst>
                    <resources>
                        <delay>0.9</delay>
                        <bandwidth>5000.0</bandwidth>
                    </resources>
                </link>
            </links>
            <capabilities>
                <supported_NFs>
                    <node>
                        <id>dpi</id>
                        <name>dpi4</name>
                        <type>dpi</type>
                        <ports>
                            <port>
                                <id>1</id>
                                <name>input</name>
                                <port_type>port-abstract</port_type>
                            </port>
                            <port>
                                <id>2</id>
                                <name>output</name>
                                <port_type>port-abstract</port_type>
                            </port>
                        </ports>
                        <links>
                            <link>
                                <id>l1</id>
                                <name>internal1</name>
                                <src>../../../ports/port[id=1]</src>
                                <dst>../../../ports/port[id=2]</dst>
                            </link>
                        </links>
                        <resources>
                            <cpu>1</cpu>
                            <mem>128</mem>
                            <storage>1</storage>
                        </resources>
                    </node>
                    <node>
                        <id>webserver</id>
                        <name>webserver4</name>
                        <type>webserver</type>
                        <ports>
                            <port>
                                <id>0</id>
                                <name>in-out</name>
                                <port_type>port-abstract</port_type>
                            </port>
                        </ports>
                        <resources>
                            <cpu>1</cpu>
                            <mem>128</mem>
                            <storage>1</storage>
                        </resources>
                    </node>
                </supported_NFs>
            </capabilities>
        </node>
    </nodes>
</virtualizer>
