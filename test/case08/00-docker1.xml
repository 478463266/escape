<virtualizer>
    <id>DOCKER</id>
    <name>Docker domain</name>
    <nodes>
        <node>
            <id>DOCKER_HOST</id>
            <name>DOCKER HOST</name>
            <type>BiSBiS</type>
            <ports>
                <port>
                    <id>eth0</id>
                    <name>SAP34</name>
                    <port_type>port-sap</port_type>
                    <sap>SAP34</sap>
                </port>
            </ports>
            <resources>
                <cpu>2</cpu>
                <mem>51200</mem>
                <storage>1024</storage>
            </resources>
            <capabilities>
                <supported_NFs>
                    <node>
                        <id>dockernf</id>
                        <name>dockernf</name>
                        <type>bridge</type>
                        <ports>
                            <port>
                                <id>eth0</id>
                                <name>mgmt</name>
                                <port_type>public-ports</port_type>
                                <metadata>
                                    <key>localports</key>
                                    <value>22</value>
                                </metadata>
                                <port_type>port-abstract</port_type>
                            </port>
                            <port>
                                <id>eth1</id>
                                <name>input</name>
                                <port_type>port-abstract</port_type>
                            </port>
                            <port>
                                <id>eth2</id>
                                <name>output</name>
                                <port_type>port-abstract</port_type>
                            </port>
                        </ports>
                        <resources>
                            <cpu>1</cpu>
                            <mem>128</mem>
                            <storage>1</storage>
                        </resources>
                    </node>
                    <node>
                        <id>balancerid</id>
                        <name>balancername</name>
                        <type>balance_server</type>
                        <ports>
                            <port>
                                <id>eth1</id>
                                <name>input</name>
                                <port_type>port-abstract</port_type>
                            </port>
                        </ports>
                        <resources>
                            <cpu>1</cpu>
                            <mem>128</mem>
                            <storage>1</storage>
                        </resources>
                    </node>
                </supported_NFs>
            </capabilities>
        </node>
    </nodes>
</virtualizer>
