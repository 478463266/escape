<virtualizer>
	<id>UUID-ETH-001</id>
	<name>ETH OpenStack-OpenDaylight domain</name>
	<nodes>
		<node>
			<id>UUID-01</id>
			<name>single Bis-Bis node representing the whole domain</name>
			<type>BisBis</type>
			<ports>
				<port>
					<id>0</id>
					<name>OVS-north external port</name>
					<port_type>port-abstract</port_type>
					<capability/>
				</port>
				<port>
					<id>1</id>
					<name>OVS-south external port</name>
					<port_type>port-abstract</port_type>
					<capability/>
				</port>
			</ports>
			<resources>
				<cpu>10 VCPU</cpu>
				<mem>32 GB</mem>
				<storage>5 TB</storage>
			</resources>
			<NF_instances>
				<node>
					<id>NF1</id>
					<name>example NF</name>
					<type>0</type>
					<ports>
						<port>
							<id>0</id>
							<name>Example NF input port</name>
							<port_type>port-abstract</port_type>
							<capability/>
						</port>
						<port>
							<id>1</id>
							<name>Example NF output port</name>
							<port_type>port-abstract</port_type>
							<capability/>
						</port>
					</ports>
				</node>
			</NF_instances>
			<capabilities>
				<supported_NFs>
					<node>
						<id>nf_a</id>
						<name>tcp header compressor</name>
						<type>0</type>
						<ports>
							<port>
								<id>0</id>
								<name>in</name>
								<port_type>port-abstract</port_type>
								<capability>...</capability>
							</port>
							<port>
								<id>1</id>
								<name>out</name>
								<port_type>port-abstract</port_type>
								<capability>...</capability>
							</port>
						</ports>
					</node>
				</supported_NFs>
			</capabilities>
			<flowtable>
				<flowentry>
					<port>../../ports/port[id=0]</port>
					<match/>
					<action>output:../../NF_instances/node[id=NF1]/ports/port[id=0]</action>
				</flowentry>
				<flowentry>
					<port>../../NF_instances/node[id=NF1]/ports/port[id=1]</port>
					<match/>
					<action>output:../../ports/port[id=1];mod_dl_src=12:34:56:78:90:12</action>
				</flowentry>
			</flowtable>
		</node>
	</nodes>
</virtualizer>
